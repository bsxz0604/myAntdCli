{
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "esnext",
    "target": "ES5",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "react",
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types/"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es2015"
    ]
  },
  "exclude": [
    "node_modules",
    ".dll",
    ".cache",
    "dist"
  ]
}
